<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".ProductDetailActivity">

    <!-- Product Image -->
    <ImageView
        android:id="@+id/productImageDetail"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:scaleType="centerCrop"
        tools:src="@drawable/ic_launcher_foreground" />

    <!-- Product Name -->
    <TextView
        android:id="@+id/productNameDetail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/productImageDetail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Product Name" />

    <!-- Product Price -->
    <TextView
        android:id="@+id/productPriceDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginTop="8dp"
        android:text="Rs. 0.00"
        android:textColor="@android:color/holo_red_dark"
        app:layout_constraintTop_toBottomOf="@id/productNameDetail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/quantityLabel" />

    <!-- Quantity Label -->
    <TextView
        android:id="@+id/quantityLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quantity:"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/productPriceDetail"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp" />

    <!-- Quantity Layout with + and - buttons -->
    <LinearLayout
        android:id="@+id/quantityLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@id/quantityLabel"
        app:layout_constraintTop_toTopOf="@id/quantityLabel">

        <!-- Minus Button -->
        <Button
            android:id="@+id/minusButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="-"
            android:textSize="24sp"
            android:layout_gravity="center_vertical"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/violet"
            android:padding="0dp" />

        <!-- Quantity TextView -->
        <TextView
            android:id="@+id/quantityText"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:gravity="center"
            android:text="1"
            android:textSize="18sp"
            android:layout_gravity="center_vertical"
            android:padding="8dp"
            android:background="@android:color/darker_gray"
            android:textColor="@android:color/white" />

        <!-- Plus Button -->
        <Button
            android:id="@+id/plusButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="+"
            android:textSize="24sp"
            android:layout_gravity="center_vertical"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/violet"
            android:padding="0dp" />

    </LinearLayout>

    <!-- Total Price -->
    <TextView
        android:id="@+id/totalPriceText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Total Price: Rs. 0.00"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        android:textStyle="bold"
        android:textColor="@android:color/holo_red_dark"
        app:layout_constraintTop_toBottomOf="@id/quantityLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Add to Cart Button -->
    <Button
        android:id="@+id/addToCartButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Add to Cart"
        android:textSize="20sp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/totalPriceText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/violet"
        android:padding="12dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
